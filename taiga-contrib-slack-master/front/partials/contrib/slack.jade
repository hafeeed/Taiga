|module.run(['$templateCache', ($templateCache) ->
|  $templateCache.put('contrib/slack', '''
div(contrib-slack-webhooks, ng-controller="ContribSlackAdminController as ctrl")
    header
        h1(tg-main-title)

    form
        label(for="url") Slack webhook url
        div.contrib-form-wrapper
            fieldset.contrib-input
                input(type="text", name="url", ng-model="slackhook.url", placeholder="Slack webhook url", id="url", data-type="url")
            fieldset.contrib-test
                a.button-gray(href="", title="Test", ng-show="slackhook.id" ng-click="ctrl.testHook()")
                    span Test

        button(type="submit", class="hidden")
        a.button-green.submit-button(href="", title="Save", ng-click="ctrl.updateOrCreateHook(slackhook)")
            span Save

    a.help-button(href="https://taiga.io/support/slack-integration/", target="_blank")
        span.icon.icon-help
        span Do you need help? Check out our support page!
|''')]);
